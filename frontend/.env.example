# BioMesh Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# ============ Contract Addresses (Sepolia) ============
NEXT_PUBLIC_DATA_REGISTRY_ADDRESS=
NEXT_PUBLIC_PAYMENT_PROCESSOR_ADDRESS=
NEXT_PUBLIC_RESEARCH_ORACLE_ADDRESS=

# ============ Network Configuration ============
NEXT_PUBLIC_CHAIN_ID=11155111
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://rpc.sepolia.org

# ============ FHE Mode Configuration ============
# Set both to 'true' for production with real @fhevm/solidity contracts
# Set both to 'false' (or omit) for testing with mock TFHE contracts
NEXT_PUBLIC_USE_REAL_FHE=false
NEXT_PUBLIC_USE_PRODUCTION_ABI=false

# ============ Optional: WalletConnect ============
# NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id
